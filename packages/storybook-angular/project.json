{
  "name": "storybook-angular",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/storybook-angular/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/storybook-angular",
        "tsConfig": "packages/storybook-angular/tsconfig.lib.json",
        "packageJson": "packages/storybook-angular/package.json",
        "main": "packages/storybook-angular/src/index.ts",
        "assets": ["packages/storybook-angular/*.md"]
      },
      "dependsOn": [
        {
          "target": "build.all",
          "projects": "dependencies"
        }
      ]
    },
    "build.all": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["node tools/scripts/build-finish.ts storybook-angular"],
        "parallel": false
      },
      "outputs": ["{workspaceRoot}/dist/packages/storybook-angular"],
      "dependsOn": [
        {
          "target": "build",
          "projects": "dependencies"
        },
        {
          "target": "build",
          "projects": "self"
        }
      ]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/storybook-angular/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/storybook-angular/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
