{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "lib": ["ESNext", "dom"],
    "types": ["node"],
    "outDir": "../../dist/out-tsc",
    "rootDir": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noEmitHelpers": false,
    "importHelpers": true
  },
  "exclude": ["**/*.spec.ts", "**/*.test.ts", "angular", "./src/bin/*.ts"],
  "include": ["**/*.ts", "references.d.ts"]
}
